{
  "name": "@contextexpert/cli",
  "version": "1.4.0",
  "description": "Cross-project context agent CLI - unified search and Q&A across codebases",
  "type": "module",
  "bin": {
    "ctx": "./dist/cli.js"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "start": "node ./dist/cli.js",
    "dev:chat": "node ./dist/cli.js chat",
    "dev:index": "node ./dist/cli.js index",
    "dev:ask": "node ./dist/cli.js ask",
    "dev:search": "node ./dist/cli.js search",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "prepublishOnly": "pnpm run build && pnpm run test"
  },
  "keywords": [
    "cli",
    "rag",
    "context",
    "search",
    "ai",
    "codebase"
  ],
  "author": "draco",
  "license": "MIT",
  "homepage": "https://github.com/draco28/ContextExpert#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/draco28/ContextExpert.git"
  },
  "bugs": {
    "url": "https://github.com/draco28/ContextExpert/issues"
  },
  "files": [
    "dist/",
    "README.md",
    "CHANGELOG.md",
    "LICENSE"
  ],
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "@contextaisdk/core": "^0.1.0",
    "@contextaisdk/provider-anthropic": "^0.1.0",
    "@contextaisdk/provider-ollama": "^0.1.0",
    "@contextaisdk/provider-openai": "^0.1.0",
    "@contextaisdk/rag": "^1.0.0",
    "@iarna/toml": "^2.2.5",
    "@langfuse/otel": "^4.6.1",
    "@langfuse/tracing": "^4.6.1",
    "@opentelemetry/sdk-node": "^0.212.0",
    "@xenova/transformers": "^2.17.0",
    "better-sqlite3": "^12.6.2",
    "chalk": "^5.3.0",
    "commander": "^12.1.0",
    "dotenv": "^17.2.3",
    "fast-glob": "^3.3.3",
    "ignore": "^7.0.5",
    "marked": "^17.0.1",
    "ora": "^8.0.1",
    "tree-sitter": "^0.25.0",
    "tree-sitter-javascript": "^0.25.0",
    "tree-sitter-python": "^0.25.0",
    "tree-sitter-typescript": "^0.23.2",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^20.14.0",
    "@vitest/coverage-v8": "^1.6.0",
    "tsup": "^8.1.0",
    "tsx": "^4.21.0",
    "typescript": "^5.5.0",
    "vitest": "^1.6.0"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild",
      "better-sqlite3",
      "tree-sitter",
      "tree-sitter-javascript",
      "tree-sitter-python",
      "tree-sitter-typescript",
      "sharp",
      "protobufjs"
    ]
  }
}
